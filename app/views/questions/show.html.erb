<div class = "container">
	<%= link_to 'Answer this question', new_answer_path(:question_id => @question.id) %>
	<h4><%= @question.title %></h4><p>Asked by:<%= @question.user.user_name %></p>
	</p><%= @question.content %></p>
</div>
<div class = "container">
	<% @question.answers.each do |answer| %>
	<p><%= answer.content %></p>
	<p>Answered by:<%= answer.user.user_name %></p>
	<% end %>
</div>
