<h2 id="signup">Sign up</h2>


  <div><%= image_tag('hruleblue.png', class: 'signup_line') %></div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, class: 'signup_field1', placeholder: 'EMAIL ADDRESS', autofocus: true %>
  </div>

  <div class="field">
    <%= f.text_field :user_name, class: 'signup_field2', placeholder: 'USER NAME' %>
  </div>

  <div class="field">
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: 'signup_field3', placeholder: 'PASSWORD', autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, class: 'signup_field4', placeholder: 'CONFIRM PASSWORD', autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "SUBMIT", class: 'signup_button' %>

  </div>
<% end %>


