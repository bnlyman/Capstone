<%= link_to event_path(event), remote: true do %>
  <div class="block-update-card status events_index">
    <div class="update-card-body">
      <h3><%= event.title.capitalize %></h3>
      <p><%= event.description %></p>
      <p>When: <%= event.datetime.strftime("%B %d, %Y - %I:%M %P") %></p> 
      <p>Where: <%= event.city %>, <%= event.state %></p>
      <p>Cost: $<%= event.cost %></p>
      <p>Spots taken: <%= event.users.count %> 
      <p><%= event.total_spots %></p>
      <%= link_to "DELETE", event_path(event), method: :delete, class: 'btn btn-default learn-more-button' %>
      <%= link_to "EDIT", edit_event_path(event), class: 'btn btn-default learn-more-button' %>
    </div>
  </div>
<% end %>