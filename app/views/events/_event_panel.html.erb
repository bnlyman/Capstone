<div class="event-panel">
	<div class="panel panel-default">
	  <div class="panel-body">
	    <%= image_tag(event.image.url(:med)) %>
	    <div class="content">
	    	<h3><%= event.title.capitalize %></h3>
	    	<div class="image-line">
	    		<%= image_tag('hrulegray.png') %>
	    	</div>
	    	<div class="description">
	    		<%= event.description %>
	    	</div>
	    	<div class="date">
	    		<%= event.datetime.strftime("%B %d, %Y - %I:%M %P") %>
	    	</div>
	    	<%= link_to "LEARN MORE", event_path(event), remote: true, class: "btn btn-default learn-more-button" %>
	    	<div class="fb-like" data-href="https://www.facebook.com/groups/clubagoge/" data-layout="button" data-action="like" 
	     		data-show-faces="true" data-share="true">
				</div>
				<div class="tweet">
	     		<a href="https://twitter.com/share" class="twitter-share-button" data-via="Club_Agoge" data-count="none">Tweet</a>
	     	</div>
	      <div class="edit-event-buttons">
		     	<% if user_signed_in? %>
		        <% if current_user.admin? %>
		          <span class = "edit-delete pull-right">
		            <%= link_to edit_event_path(event), remote: true do %>
		              <i class="fa fa-pencil fa-lg" data-toggle="tooltip" title="Edit"></i>
		            <% end %>       
		            &nbsp;&nbsp;
		            <%= link_to event_path(event), data: { confirm: "This action cannot be undone.  Are you sure you want to delete this event?" },  method: :delete do %>
		              <i class="fa fa-trash fa-lg" data-toggle="tooltip" title="Delete"></i>
		            <% end %>
		          </span>
		        <% end %>
		      <% end %>
	      </div>
	    </div>
	  </div>
	</div>
</div>