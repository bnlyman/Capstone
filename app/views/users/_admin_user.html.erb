<div class="panel panel-default">
	<div class="panel-body">
		<div class="col-md-5">
  			<% if user.admin? %>
  				<h4>Admin</h4>
  			<% else %>
  				<h4>User</h4>
  			<% end %>
  		<p><b>Name: </b><%= user.first_name %> <%= user.last_name %></p>
  		<p><b>Username: </b><%= user.user_name %></p>
  		<p><b>Email: </b><%= user.email %></p>
		</div>
		<div class="col-md-3">
  		<h4>Forum</h4>
  		<p><b>Posts: </b><%= user.questions.count %></p>
  		<p><b>Answers: </b><%= user.answers.count %></p>
		</div>
		<div class="col-md-3">
			<p><h4>Events</h4>
			<p><b>Joined: </b><%= user.events.count %></p>
			<p><b>Created: </b><%= user.owned_events.count %></p>
		</div>
	</div>
</div>
