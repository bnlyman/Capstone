<div class="container">
	<% if current_user.admin? %>
		<h5>You already have access to the admin portal.<h5>
		<%= link_to "Go there now!", users_admin_path, class: 'btn btn-default forum-btn' %>
	<% else %>
		<h5>Please enter your admin code below to gain access to the adminsatrative features of this site.</h5>
		<div class="col-md-4">
		<%= form_for @user, :url => {:action => "upd_admin", :id => @user.id, :code => :code} do |f| %>

			<%= f.label :code %>
	  	<%= f.text_field :code, class: 'form-control'  %>

	  	<%= f.submit "Submit", class: "btn btn-default forum-btn" %>
	  <% end %>
		</div>
	<% end %>
</div>
